#include <iostream>
using namespace std;
int find(int arr[],int size){
    int left=0;
    int right=size+1;
    while(left<=right){
        int mid=(left+right)/2;
        if(arr[mid]!=mid-1&&arr[mid-1]==mid){
            return mid+1;
        }
        if(arr[mid]!=mid+1){
            right=mid-1;
        }
        else{
            left=mid+1;
        }
    }
    return -1;
}
int main(){
    int arr[]={1,2,4,5};
    int n=sizeof(arr)/sizeof(arr[0]);
    cout<<find(arr,n);
    return 0;
}
