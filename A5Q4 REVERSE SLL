#include <iostream>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    Node(int new_data){
        data=new_data;
        next=nullptr;
    }
};
Node* reverse(Node* head){
    if (head==NULL || head->next==NULL){
        return head;
    }
    Node* rev=reverse(head->next);
    head->next->next=head;
    head->next=NULL;
    return rev;
}
void print(Node* node){
    while(node!=nullptr){
        cout<<node->data;
        if (node->next){
            cout<<" -> ";
        }
        node=node->next;
    }
}
int main(){
    Node* head=new Node(1);
    head->next=new Node(2);
    head->next->next=new Node(3);
    head->next->next->next=new Node(4);
    head=reverse(head);
    print(head);
    return 0;
}
