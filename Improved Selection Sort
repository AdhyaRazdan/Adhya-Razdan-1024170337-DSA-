#include <iostream>
using namespace std;
void improvedSelectionSort(int arr[], int n) {
    int start = 0;
    int end = n - 1;
    while (start < end) {
        int min_idx = start;
        int max_idx = start;
        for (int i = start; i <= end; i++) {
            if (arr[i] < arr[min_idx])
                min_idx = i;
            if (arr[i] > arr[max_idx])
                max_idx = i;
        }
        swap(arr[start], arr[min_idx]);
        if (max_idx == start)
            max_idx = min_idx;
        swap(arr[end], arr[max_idx]);
        start++;
        end--;
    }
}
void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}
int main() {
    int arr[] = {64, 25, 12, 22, 11, 90, 34};
    int n = sizeof(arr) / sizeof(arr[0]);
    improvedSelectionSort(arr, n);
    cout << "Sorted array:\n";
    printArray(arr, n);
    return 0;
}
