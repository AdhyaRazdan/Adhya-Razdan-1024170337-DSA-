#include <iostream>
#include <climits>
using namespace std;
class Node {
public:
	int data;
	Node* left;
	Node* right;
	Node(int new_data) {
		data=new_data;
		left=right=nullptr;
	}
};

void inorder(Node* root){   //LPR
    if(root==NULL){
        return;
    }
    inorder(root->left);
    cout<<root->data<<" ";
    inorder(root->right);
}

bool isBSTRange(Node* root, int minVal, int maxVal){
    if(root == NULL){
        return true;
    }
    if(root->data <= minVal || root->data >= maxVal){
        return false;
    }
    return ( isBSTRange(root->left, minVal, root->data) &&
             isBSTRange(root->right, root->data, maxVal) );
}

bool isBST(Node* root){
    return isBSTRange(root, INT_MIN, INT_MAX);
}

int main() {
	Node* root=new Node(50);
	root->left=new Node(30);
	root->right=new Node(70);
	root->right->left=new Node(60);
	root->right->right=new Node(80);
	
	if(isBST(root))
        cout<<"Tree is BST";
    else
        cout<<"Tree is NOT BST";
	return 0;
}
