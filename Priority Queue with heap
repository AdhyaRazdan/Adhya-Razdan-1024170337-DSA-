#include <iostream>
using namespace std;

class MinPriorityQueue {
public:
    int arr[100];   
    int size;
    MinPriorityQueue() {
        size = 0;
    }
    void insert(int value) {
        size++;
        int i = size - 1;
        arr[i] = value;
        while(i != 0) {
            int parent = (i - 1) / 2;
            if(arr[parent] > arr[i]) {   
                int temp = arr[parent];
                arr[parent] = arr[i];
                arr[i] = temp;
                i = parent;
            }
            else break;
        }
    }
    int getMin() {
        if(size == 0) {
            cout << "Priority Queue is empty!\n";
            return -1;
        }
        return arr[0];
    }
    void heapify(int i) {
        int smallest = i;
        int left = 2*i + 1;
        int right = 2*i + 2;
        if(left < size && arr[left] < arr[smallest])
            smallest = left;
        if(right < size && arr[right] < arr[smallest])
            smallest = right;
        if(smallest != i) {
            int temp = arr[i];
            arr[i] = arr[smallest];
            arr[smallest] = temp;

            heapify(smallest);
        }
    }
    int extractMin() {
        if(size <= 0) {
            cout << "Priority Queue is empty!\n";
            return -1;
        }
        if(size == 1) {
            size--;
            return arr[0];
        }
        int root = arr[0];           
        arr[0] = arr[size - 1];      
        size--;
        heapify(0);                  
        return root;
    }
    void display() {
        if(size == 0) {
            cout << "Priority Queue is empty!\n";
            return;
        }
        cout << "Min-Heap Priority Queue: ";
        for(int i = 0; i < size; i++)
            cout << arr[i] << " ";
        cout << endl;
    }
};
int main() {
    MinPriorityQueue pq;
    pq.insert(30);
    pq.insert(10);
    pq.insert(20);
    pq.insert(5);
    pq.insert(40);
    pq.display();
    cout << "Minimum element: " << pq.getMin() << endl;
    cout << "Extracted minimum: " << pq.extractMin() << endl;
    pq.display();
    return 0;
}
